# Set default behavior to automatically normalize line endings
* text=auto

# Source code files - force LF
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts - must use LF
*.sh text eol=lf
*.bash text eol=lf
*.brs text eol=lf

# Windows-specific files - use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.aspx text eol=crlf
*.cs text eol=crlf
*.config text eol=crlf

# Database and Prisma files
*.prisma text eol=lf
*.sql text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
*.config text eol=lf
*.conf text eol=lf

# Documentation
*.txt text eol=lf
README* text eol=lf
LICENSE* text eol=lf
CHANGELOG* text eol=lf

# Binary files - do not modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.pdf binary
*.zip binary
*.gz binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary

# Lock files - preserve exact format
package-lock.json binary
bun.lock binary
yarn.lock binary
pnpm-lock.yaml binary

