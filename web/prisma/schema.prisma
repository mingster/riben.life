  @@index([lastModified])
  @@index([status])
  @@index([senderId])
  @@index([recipientId])
  @@index([storeId])
}

model ContactUs {
  id           String   @id @default(uuid())
  ipaddr       String   @db.Char(12)
  name         String?
  gender       String?
  phone        String?
  email        String?
  inquireType  String?
  subject      String?
  questionBody String?
  status       Int      @default(0)
  lastModified DateTime @default(now())

  @@index([status])
}

